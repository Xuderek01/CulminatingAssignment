import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.chart.BarChart;
import javafx.scene.chart.CategoryAxis;
import javafx.scene.chart.NumberAxis;
import javafx.scene.chart.XYChart;
import javafx.stage.Stage;
import java.util.Scanner; 

public class App extends Application {
  
    public static void main(String[] args) {
        
     launch(args); //Launches the JavaFX application 
    }
   
    @Override 
    public void start(Stage stage) throws Exception {

        //Call methods to get values needed

        //Declare axes
        CategoryAxis xAxis = new CategoryAxis();
        NumberAxis yAxis = new NumberAxis();
        BarChart<String,Number> bc = new BarChart<String,Number>(xAxis,yAxis); //Create bar chart object 
        
        //Label axis and titles 
        stage.setTitle("Energy bar chart"); 
        bc.setTitle("Energy bar chart");  //Change this title later. Maybe open the option for the user to choose 
        xAxis.setLabel("Energy");       
        yAxis.setLabel("Blocks of energy");
        bc.setLegendVisible(false);  //Makes legend invisible for now  
 
        //Define the series of data and assign data to the chart 
        XYChart.Series series = new XYChart.Series();
                
        //series.getData().add(new XYChart.Data("1", energyCalc[1])); //May need to call a function to get the values or get the position of an array
        series.getData().add(new XYChart.Data("1", 333)); //Tests if this code works
        bc.getData().addAll(series); //Adds data to the bar chart 
        
        Scene scene  = new Scene(bc,800,600); //Creates the scene, sets width and height
        stage.setScene(scene); //Sets the scene 
        stage.show(); //Shows the stage  
    }
  }


